<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_order_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="pos_hr.pos_order_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lines']/tree/field[@name='product_id']" position='after'>
                <field name="commision_percentage" string="ComisiÃ³n %" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='lines']/tree/field[@name='price_subtotal_incl']" position='after'>
                <field name="cost_subtotal" widget="monetary" force_save="1"/>
                <field name="sell_utility" widget="monetary" force_save="1"/>
                <field name="commision_value" widget="monetary" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='lines']/tree/field[@name='price_unit']" position='after'>
                <field name="cost_unitario" widget="monetary" force_save="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_pos_order_tree_inherit" model="ir.ui.view">
        <field name="name">pos.order.tree.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="cost_value" widget="monetary" sum="Costo"/>
            </xpath>
        </field>
    </record>

    <template id="report_saledetails" inherit_id="point_of_sale.report_saledetails">
        <xpath expr="//table/thead/tr" position="inside">
            <th>Costo</th>
            <th>Utilidad</th>
            <th>Fecha</th>
            <th>Vendedor</th>
            <th>Comision %</th>
            <th>Comision</th>
        </xpath>
        <xpath expr="//table/tbody/tr" position="inside">
            <td>
                <t t-esc='line["cost_unitario"]' />
            </td>
            <td>
                <t t-esc='line["sell_utility"]' />
            </td>
            <td>
                <t t-esc='line["date_order"]' />
            </td>
            <td>
                <t t-esc='line["user_id"]' />
            </td>
            <td>
                <t t-esc='line["commision_percentage"]' class="text-center"/>%
            </td>
            <td>
                <t t-esc='line["commision_value"]' class="text-right"/>
            </td>
        </xpath>
        <xpath expr="//table" position='after'>
            <div class="clearfix" name="total_summary">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-sm">
                            <tr class="border-black o_subtotal" style="">
                                <td><strong>Comision Total</strong></td>
                                <td name="commision" class="text-right">
                                    <t t-esc="sum(line['commision_value'] for line in products) " />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>
